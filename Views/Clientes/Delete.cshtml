@model ConectaCliente.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<style>
    /* Animação do gradiente de fundo */
    @@keyframes gradientBG {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    body {
        background: linear-gradient( 45deg, #0000FF,#6495ED, #4169E1 );
        background-size: 400% 400%;
        animation: gradientBG 12s ease infinite;
        color: #FFFFFF; /* Texto claro para contraste */
        font-family: 'Roboto', sans-serif;
    }


    h1, h2 {
        text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.8);
        color: #000000;
    }

    .card {
        border: none;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(8px);
        color: #2d2d2d;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 15px rgba(255, 107, 129, 0.6);
        }

    .table {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(5px);
        border-radius: 10px;
        border: 1px solid #ff758f;
    }


    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: none;
        font-weight: bold;
    }



        .btn:hover {
            transform: translateY(-3px);
        }

</style>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="text-center">Excluir Cliente</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-danger">Tem certeza de que deseja excluir este cliente?</h4>
            <div class="row justify-content-center mt-4">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold text-end">
                            Nome:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-3 fw-bold text-end">
                            Foto:
                        </dt>
                        <dd class="col-sm-9">
                            @if (Model.FotoCliente != null)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.FotoCliente)"
                                     alt="Foto do Cliente"
                                     class="img-thumbnail rounded mx-auto d-block"
                                     style="max-width: 150px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sem imagem disponível</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="row justify-content-center mt-4">
                <div class="col-md-6 text-center">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash-alt"></i> Excluir
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

