@model ConectaCliente.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}
<style>
    /* Animação do gradiente de fundo */
    @@keyframes gradientBG {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    body {
        background: linear-gradient( 45deg, #0000FF,#6495ED, #4169E1 );
        background-size: 400% 400%;
        animation: gradientBG 12s ease infinite;
        color: #FFFFFF; /* Texto claro para contraste */
        font-family: 'Roboto', sans-serif;
    }


    h1, h2 {
        text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.8);
        color: black;
    }

    .card {
        border: none;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(8px);
        color: #2d2d2d;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }


        .card:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 15px rgba(255, 107, 129, 0.6);
        }


    .table {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(5px);
        border-radius: 10px;
        border: 1px solid #ff758f;
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: none;
        font-weight: bold;
    }


        .btn:hover {
            transform: translateY(-3px);
        }
</style>

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <div class="row mb-4">
            <div class="col-md-4 text-center">
                <h5>Foto do Cliente</h5>
                @if (Model.FotoCliente != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.FotoCliente)"
                         alt="Foto do Cliente"
                         class="img-thumbnail mt-2"
                         style="max-width: 200px;" />
                }
                else
                {
                    <div class="alert alert-secondary mt-2" role="alert">
                        Sem imagem disponível
                    </div>
                }
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Nome</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>                   

                    <dt class="col-sm-4">E-mail</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4">Data de Nascimento</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DataNascimento)</dd>

                    <dt class="col-sm-4">Sexo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Sexo)</dd>
                </dl>
            </div>
        </div>

        <h4 class="mt-4">Endereço</h4>
        <dl class="row">
            <dt class="col-sm-4">Logradouro</dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Logradouro)                
            </dd>

            <dt class="col-sm-4">Numero</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Numero)</dd>

            <dt class="col-sm-4">Complemento</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Complemento)</dd>

            <dt class="col-sm-4">Bairro</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Bairro)</dd>

            <dt class="col-sm-4">Cidade</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Cidade)</dd>

            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>          
                        
            <dt class="col-sm-4">CEP</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CEP)</dd>
        </dl>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-primary btn-lg px-4">Voltar</a>
        </div>
    </div>
</div>

